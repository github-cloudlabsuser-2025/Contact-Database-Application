{
"$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
"contentVersion": "1.0.0.0",
"resources": [
{
"type": "Microsoft.Web/sites",
"apiVersion": "2020-06-01",
"name": "[parameters('webAppName')]",
"location": "[parameters('location')]",
"properties": {
"serverFarmId": "[resourceId('Microsoft.Web/serverfarms', parameters('hostingPlanName'))]"
},
"resources": [
{
"type": "config",
"apiVersion": "2020-06-01",
"name": "appsettings",
"dependsOn": [
"[resourceId('Microsoft.Web/sites', parameters('webAppName'))]"
],
"properties": {
"WEBSITE_NODE_DEFAULT_VERSION": "[parameters('nodeVersion')]"
}
}
]
},
{
"type": "Microsoft.Web/serverfarms",
"apiVersion": "2020-12-01",
"name": "[parameters('hostingPlanName')]",
"location": "[parameters('location')]",
"properties": {
"name": "[parameters('hostingPlanName')]",
"reserved": true
}
}
],
"parameters": {
"webAppName": {
"type": "string",
"metadata": {
"description": "Name of the web app"
}
},
"location": {
"type": "string",
"metadata": {
"description": "Location for the web app and hosting plan"
}
},
"hostingPlanName": {
"type": "string",
"metadata": {
"description": "Name of the hosting plan"
}
},
"hostingPlanSkuName": {
"type": "string",
"defaultValue": "F1",
"metadata": {
"description": "SKU name for the hosting plan"
}
},
"hostingPlanSkuTier": {
"type": "string",
"defaultValue": "Free",
"metadata": {
"description": "SKU tier for the hosting plan"
}
},
"hostingPlanSkuSize": {
"type": "string",
"defaultValue": "F1",
"metadata": {
"description": "SKU size for the hosting plan"
}
},
"hostingPlanSkuCapacity": {
"type": "int",
"defaultValue": 1,
"metadata": {
"description": "SKU capacity for the hosting plan"
}
},
"nodeVersion": {
"type": "string",
"defaultValue": "14.17.0",
"metadata": {
"description": "Node.js version for the web app"
}
}
}
}
